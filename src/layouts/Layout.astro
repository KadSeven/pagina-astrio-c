<style>
	html, body {
		padding:0;
		margin:0;
	}

	header {
		height: 80px;
		background: rgb(35, 33, 43);
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.flex-menu img {
		width: 140px;
	}
	.flex-menu {
		display: flex;
		height: 80px;
		width: 60%;
		float: left;
		align-items: center;
		color: #f6f2f2;
		font-family: sans-serif;
		text-transform: uppercase;
	}

	.flex-menu a{
		color: #d7c9c9;
		font-weight: 600;
		text-decoration: none;
	}

	.flex-menu:hover {
		color: #fff;
	}

	.flex-menu li{
		margin-left: 10px;
		list-style: none;
		display: inline-block;
	}

	.menu-right {
		float: left;
		margin-top: 8px;
		width: 40%;
		color: #ebe4e4;
		font-family: sans-serif;
	}

	.menu-right a {
		margin: 0 6px;
		color: #ebe4e4;
		text-decoration: none;	
	}

	.btn-download {
		color: #fff;
		background-color: #789806;
		display: inline-block;
		pad: 6px 12px;
		font-family: sans-serif;
		text-decoration: none;
		display: inline-flex;
		gap: 8px;
		align-items: center;
	}

	.btn-download svg {
		width: 18px;
	}

	.btn-download:hover {
		background-color: #8caf0c;
	}

	.banner {
		background: orange;
		height: 360px;
	}

	.banner2 {
		position: relative;
		background: purple;
		height: 260px;
	}

	.left-menu {
		background-color: pink;
		width: 180px;
		height: 360px;
		position: fixed;
	}

	.banner3 {
		height: 1200px;
		background-color: turquoise;
	}
</style>
